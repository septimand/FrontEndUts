@page "/employeepageImg"
<h3>Daftar Employee</h3>

@if(Employees == null){
    <div class="spinner"></div>
}else 
{
<div class="card-deck">
    @foreach (var emp in Employees)
    {
        <div class="card m-3" style="min-width: 18rem; max-width: 30%;">
            <div class="card-header">
                <h3 class="text-center">@emp.FirstName @emp.LastName</h3>
            </div>
            <img class="card-img-top img-thumbnail" src="@emp.PhotoPath" />
            <div class="card-footer text-center">
                <a href="@($"employeedetailImg/{emp.EmployeeId}")" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-warning m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
}