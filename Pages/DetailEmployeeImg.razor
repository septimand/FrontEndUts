@page "/employeedetailImg/{id}"

<a href="/employeepageImg" class="h4">Employee</a>
<a class="active h4" >></a>
<a href="/employeedetailImg/{id}" class="active h4" >Detail Employee</a>
@if(Employee == null  || Employee.Department == null ){
    <div class="spinner1"></div>
}else 
{
<div class="card-deck">
    <div class="col-3"></div>
        <div class="card m-3 col-8" style="min-width: 10rem; max-width: 48%;">
            <img class="card-img-top img-thumbnail" src="@Employee.PhotoPath" />
            <div class="card-footer">
                <div class="card-header">
                    <h3 class="text-center">@Employee.FirstName @Employee.LastName</h3>
                </div>
                <div class="row">
                <div class="col-6"> EmployeeId </div>
                <div class="col-6"> : @Employee.EmployeeId</div>
                <div class="col-6"> FirstName  </div>
                <div class="col-6"> : @Employee.FirstName</div><br>
                <div class="col-6"> LastName   </div>
                <div class="col-6"> : @Employee.LastName</div><br>
                <div class="col-6"> Email </div>
                <div class="col-6"> : @Employee.Email</div>
                <div class="col-6"> DateOfBirth </div>
                <div class="col-6"> : @Employee.DateOfBirth</div>
                <div class="col-6"> Gender </div>
                <div class="col-6"> : @Employee.Gender</div>
                <div class="col-6"> DepartmentId </div>
                <div class="col-6"> : @Employee.DepartmentId</div>
                <div class="col-6"> DepartmentName </div>
                <div class="col-6"> : @Employee.Department.DepartmentName</div>
                </div>
            </div>
        </div>
</div>
}